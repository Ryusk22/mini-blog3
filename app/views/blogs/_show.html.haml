.row
  .col.s12.m6
    .card.card.grey.darken-1
      .card-content.white-text
        %span.card-title
          =blog.title
        %p.card-contents
          = blog.content
      .card-action
        - if user_signed_in? && blog.user_id == current_user.id
          %a.waves-effect.waves-light.btn-small{href: "blogs/#{blog.id}", method: :get}  Show
          %a.waves-effect.waves-light.btn-small{href: "blogs/#{blog.id}/edit"}  Edit
          = link_to 'Destroy', "blogs/#{blog.id}", data: { confirm: 'Are you sure?', method: 'delete'}
        -else
          = link_to 'Show', "blogs/#{blog.id}", method: 'get'
          / %a.waves-effect.waves-light.btn-small{href: "blogs/#{blog.id}", method: :get}  Show
